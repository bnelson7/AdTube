<!DOCTYPE html>
<html>
  <head>
    <title>AdTube</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap|Roboto: 500" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.12/css/all.css" integrity="sha384-G0fIWCsCzJIMAVNQPfjH08cyYaUtMwjJwqiRKxxE/rx96Uroj1BtIQ6MLJuheaO9" crossorigin="anonymous">
    <%= favicon_link_tag asset_path('favicon-16x16.png') %>

    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700&display=swap" rel="stylesheet">

    <%= javascript_include_tag('progress_bar.js') %>

    <script type='text/javascript'>
        window.no_search_results = '<%= image_url('no_search_results.png') %>'
        window.google_logo = '<%= image_url('google_logo.jpg')%>'
        window.google_logo_2 = '<%= image_url('google_logo_2.png')%>'
        window.one_account = '<%= image_url('one_account.png')%>'
        window.user = '<%= image_url('user.png')%>'
        window.channel_brand_logo = '<%= image_url('channel_brand_logo.png')%>'
    </script>

  </head>

  <body>
  
    <div class='progress' id="progress-div">
      <div class='bar' id='bar1'></div>
      <div class='percent' id='percent1'></div>
    </div>

    <input type="hidden" id="progress-width" value="0">
  
    <%= yield %>
  </body>
</html>
